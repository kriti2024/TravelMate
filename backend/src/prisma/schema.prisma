generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  TRAVELLER
  GUIDE
  ADMIN
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  password       String
  phone          String?
  role           Role     @default(TRAVELLER)
  profileImage   String?
  licenseNumber  String?
  specialization String?
  createdAt      DateTime @default(now())
}
